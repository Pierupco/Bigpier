<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/mvc
                           http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <import resource="hibernateContext.xml"/>

    <mvc:annotation-driven/>

    <bean id="searchDao" class="com.pier.application.dao.search.SimpleMerchantDbSearchDAO"/>
    <context:component-scan base-package="com.pier.api.web.controller"/>
    <context:component-scan base-package="com.pier.application.service"/>
    <context:component-scan base-package="com.pier.application.processor"/>
    <context:component-scan base-package="com.pier.application.dao"/>
    <context:component-scan base-package="com.pier.application.security"/>
    <context:component-scan base-package="com.pier.application.model"/>

</beans>